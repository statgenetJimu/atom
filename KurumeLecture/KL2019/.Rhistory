my.exact.prob <- function(tab){
a <- tab[1,1]
b <- tab[1,2]
c <- tab[2,1]
d <- tab[2,2]
ab <- a + b
cd <- c + d
ac <- a + c
bd <- b + d
n <- sum(tab)
bunbo <- factorial(n) * factorial(a)*factorial(b)*factorial(c)*factorial(d)
bunsi <- factorial(ab)*factorial(cd)*factorial(ac)*factorial(bd)
prob <- bunsi / bunbo
return(prob)
}
